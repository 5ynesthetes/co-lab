{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": false,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "client/src/**/*",
    "server/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}